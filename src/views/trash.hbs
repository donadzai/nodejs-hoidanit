<div class='mt-4'>
    <a href='/stored' type='button' class='btn btn-primary'>Danh sách user</a>
    <h1>Danh sách user đã xóa</h1>
    <table class='table'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>First Name</th>
                <th scope='col'>Last Name</th>
                <th scope='col'>Address</th>
                <th scope='col'>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each trashUser}}
                <tr>
                    <th scope='row'>{{plus @index}}</th>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.address}}</td>
                    <td>
                        <form action='/trash/restore/{{this.id}}?_method=PUT' method='post'>
                            <button class='btn btn-primary' role='button'>RESTORE</button>
                        </form>
                        <button
                            type='button'
                            class='btn btn btn-danger'
                            data-bs-toggle='modal'
                            data-bs-target='#deleteModel'
                            data-bs-id='{{this.id}}'
                        >DELETE</button>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td class='text-center' colspan='5'>Empty Trash !!!</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{! Model }}
<div class='modal fade' id='deleteModel' tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true'>
    <div class='modal-dialog'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h1 class='modal-title fs-5' id='exampleModalLabel'>Bạn có chắc chắn muốn xóa vĩnh viễn user này không ?</h1>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-secondary' data-bs-dismiss='modal'>Close</button>
                <button id='delete-confirm' type='button' class='btn btn-primary'>Delete</button>
            </div>
        </div>
    </div>
</div>

<form id='form-submit' method='post'></form>

<script src='./handleModelDeleteFromTrash.js'></script>